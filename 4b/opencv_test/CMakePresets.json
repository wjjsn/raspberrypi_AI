{
    "version": 8,
    "configurePresets": [
        {
            "name": "pi",
            "displayName": "使用工具链文件配置预设",
            "description": "设置 Ninja 生成器、版本和安装目录",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/../toolchain.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/"
            }
        }
    ]
}