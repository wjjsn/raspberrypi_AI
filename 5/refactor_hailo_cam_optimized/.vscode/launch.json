{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "attach",
      "name": "Attach",
      "pid": "3213" , // use ${command:pickMyProcess} to Process} to pick other users' processes
      "initCommands": [
        "platform select remote-linux", // For example: 'remote-linux', 'remote-macosx', 'remote-android', etc.
        "platform connect connect://pi5.local:1234",
        "settings set target.inherit-env false", // See the note below.
      ],
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch",
      "program": "/tmp/${workspaceFolderBasename}",
      "initCommands": [
        "platform select remote-linux", // For example: 'remote-linux', 'remote-macosx', 'remote-android', etc.
        "platform connect connect://pi5.local:1234",
        "settings set target.inherit-env false", // See the note below.
      ],
      "args": [],
      "cwd": "/tmp",
      // "stopOnEntry": true,

      "preLaunchTask": "scp-exe",
    }
  ]
}
